}
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.TenSanPham)</th>
        <th>@Html.DisplayNameFor(model => model.Soluong)</th>
        <th>@Html.DisplayNameFor(model => model.MoTa)</th>
        <th>@Html.DisplayNameFor(model => model.Gia)</th>
        <th>@Html.DisplayNameFor(model => model.DanhMucID)</th>
        <th>@Html.DisplayNameFor(model => model.HangID)</th>
        <th>@Html.DisplayNameFor(model => model.HinhAnh)</th>
        <th>@Html.DisplayNameFor(model => model.KhuyenMai)</th>
