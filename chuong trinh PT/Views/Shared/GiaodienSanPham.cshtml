        <td colspan="9">
            <div class="form-actions no-color">
                <a href="@Url.Action("Them", "SanPham")" class="btn btn-default">Thêm sản phẩm mới</a>
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <p>So sanh </p>
