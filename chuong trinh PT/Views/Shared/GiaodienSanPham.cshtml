    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.TenSanPham)</td>
            <td>@Html.DisplayFor(modelItem => item.Soluong)</td>
            <td>@Html.DisplayFor(modelItem => item.MoTa)</td>
            <td>@Html.DisplayFor(modelItem => item.Gia)</td>
            <td>@Html.DisplayFor(modelItem => item.DanhMucID)</td>
            <td>@Html.DisplayFor(modelItem => item.HangID)</td>
            <td>@Html.DisplayFor(modelItem => item.HinhAnh)</td>
            <td>@Html.DisplayFor(modelItem => item.KhuyenMai)</td>
            <td>
                @Html.ActionLink("Xóa", "Xoa", "SanPham", new { id = item.SanPhamID }, null) |
                @Html.ActionLink("Cập nhật", "CapNhat", "SanPham", new { id = item.SanPhamID }, null)|
                @Html.ActionLink("Chi tiet", "ChiTiet", "SanPham", new { id = item.SanPhamID }, null)
            </td>
        </tr>
    }
